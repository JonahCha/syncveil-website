# =============================================
# SYNCVEIL - ENVIRONMENT CONFIGURATION
# =============================================
# NEVER commit .env files to version control
# Copy this to .env and fill in real values

# Environment (development | production)
ENVIRONMENT=development

# =============================================
# DATABASE
# =============================================
# Development (local PostgreSQL)
DATABASE_URL=postgresql://syncveil_dev:dev_password@localhost:5432/syncveil_dev

# Production (use Railway/DigitalOcean provided URL)
# DATABASE_URL=postgresql://user:password@host:5432/syncveil_prod

# =============================================
# JWT SECRETS (MUST CHANGE IN PRODUCTION)
# =============================================
JWT_SECRET=CHANGE_THIS_TO_RANDOM_256_BIT_SECRET_IN_PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================
# REDIS (SESSION STORE & RATE LIMITING)
# =============================================
REDIS_URL=redis://localhost:6379/0
# Production: redis://default:password@host:6379

# =============================================
# EMAIL SERVICE (SENDGRID)
# =============================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
EMAIL_FROM=noreply@syncveil.com
EMAIL_FROM_NAME=SyncVeil Security

# =============================================
# OTP CONFIGURATION
# =============================================
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5
OTP_MAX_ATTEMPTS=3

# =============================================
# EMAIL VERIFICATION
# =============================================
EMAIL_VERIFICATION_EXPIRE_HOURS=24
EMAIL_VERIFICATION_REQUIRED=true

# =============================================
# SECURITY
# =============================================
# Argon2 settings (DO NOT CHANGE ONCE IN PRODUCTION)
PASSWORD_HASH_TIME_COST=2
PASSWORD_HASH_MEMORY_COST=65536
PASSWORD_HASH_PARALLELISM=1

# Rate limiting
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_OTP=3/minute
RATE_LIMIT_SIGNUP=2/minute

# =============================================
# CORS
# =============================================
# Development
CORS_ORIGINS=http://localhost:3000,http://localhost:5500,http://localhost:8080

# Production (your frontend domain)
# CORS_ORIGINS=https://app.syncveil.com

# =============================================
# ADMIN
# =============================================
# First admin email (for initial setup only)
INITIAL_ADMIN_EMAIL=admin@syncveil.com

# =============================================
# LOGGING
# =============================================
LOG_LEVEL=INFO
LOG_FILE=logs/syncveil.log

# =============================================
# FRONTEND URL (for email links)
# =============================================
FRONTEND_URL=http://localhost:5500
# Production: https://app.syncveil.com

# Backend environment variables
# Copy to backend/.env and fill in per-environment values

# Environment
ENV=production
PORT=8000
LOG_LEVEL=INFO

# Databases
DATABASE_URL=postgresql://user:password@host:port/database
MONGO_URI=
MONGO_DB_NAME=

# Authentication / JWT
JWT_SECRET=change-me-to-a-32-char-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS / Frontend
CORS_ORIGINS=https://your-frontend-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Email (optional, required if EMAIL_ENABLED=true)
EMAIL_ENABLED=false
BREVO_API_KEY=
SMTP_FROM=
EMAIL_FROM_NAME=SyncVeil

# OTP
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Rate limiting
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_OTP=3/minute
RATE_LIMIT_SIGNUP=2/minute

# Redis (optional)
REDIS_URL=
